<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.ezen.royal.client.communication.mapper.NoticeMapper">


	<select id="getList"
		resultType="com.ezen.royal.client.communication.dto.NoticeDTO">
		SELECT * FROM notice ORDER BY
		notice_id DESC
	</select>
	
	<select id="getUniqueValuesCount"
		resultType="java.lang.Integer">
		SELECT COUNT(DISTINCT notice_id) AS unique_values_count
		FROM notice
	</select>
	
	<select id="get"
		resultType="com.ezen.royal.client.communication.dto.NoticeDTO">
		SELECT * FROM notice WHERE notice_id=#{notice_id}
	</select>
</mapper>